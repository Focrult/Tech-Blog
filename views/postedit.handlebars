<div class="card my-3">
  <div class="card-header">
    <h3>Edit Post</h3>
  </div>
  <form class="card-body edit-form">

    <div class="form-group">
      <label for="post-title" class="form-label">Title</label>
      <input name="post-title" type="text" value="{{post.title}}" class="form-control" />
    </div>

    <div class="form-group">
      <label class="form-label" for="text">Content</label>
      <textarea name="text" class="form-control">{{post.text}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update Post</button>
    <button type="button" class="delete-post-btn btn btn-danger">Delete Post</button>
  </form>
</div>

<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>