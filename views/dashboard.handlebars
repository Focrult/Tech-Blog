<h2 style="text-align:center">Hello, {{user.username}}</h2>
<section class="container my-5">
  <h2 class="mb-4">Your Posts</h2>
      {{#if posts.length}}
    <div class="row row-cols-1 row-cols-md-2 g-4">
        {{#each posts as |post|}}
          <div class="col">
            {{> dashboard-postinfo post}}
          </div>
        {{/each}}
      </div>
    {{else}}
  <p style="text-align:center">Start posting!</p>
{{/if}}
  <div class="d-grid gap-2 col-6 mx-auto text-center mt-4">
    <button type="submit" class="btn btn-primary">
      <a href="/dashboard/new" style="color:white;text-decoration:none">Create New Post</a>
    </button>
  </div>
</section>
